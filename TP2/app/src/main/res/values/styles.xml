<?xml version="1.0" encoding="utf-8"?>

<resources>


<style name="TextViewStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textColor">#FAFAFA</item>
    <item name="android:textColorHint">#FAFAFA</item>
    <item name="android:textAlignment">center</item>
</style>

<style name="TableRowStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
</style>

<style name="EditTextStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:hint">@string/saisi2</item>
    <item name="android:ems">10</item>
    <item name="android:inputType">text</item>
</style>

<style name="ButtonStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:padding">0dp</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textColor">#2196F3</item>
    <item name="android:textColorHighlight">#FF9800</item>
    <item name="android:textColorHint">#FAFAFA</item>
    <item name="android:textColorLink">#EB4D42</item>
</style>

</resources>
